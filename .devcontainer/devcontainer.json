{
  "image": "mcr.microsoft.com/devcontainers/php:1-8.3-bullseye",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "features": {
    "ghcr.io/devcontainers/features/node:1": { "version": "20" },
    "ghcr.io/devcontainers/features/mysql:1": {
      "version": "8.0",
      "port": 3306,
      "database": "bscn",
      "user": "bscn",
      "password": "bscn"
    }
  },
  "forwardPorts": [8000, 5173, 3306],
  "portsAttributes": {
    "8000": { "label": "Laravel", "onAutoForward": "openBrowser" },
    "5173": { "label": "Vite", "onAutoForward": "ignore" }
  }
}
